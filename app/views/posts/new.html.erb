<%= form_for [@tag, @post] do |f| %>
  <%= render partial: "/partials/errors", locals: {obj: @post} %>
  <%= f.label :title %>
  <%= f.text_field :title, class: @post.errors ? nil : "red" %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.collection_select(:tag_id, Tag.all, :id, :title)%>
  <%= f.submit "Create Post! :D"%>
<% end %>